{
  "format_on_save": "on",
  "formatter": "language_server",
  "code_actions_on_format": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "languages": {
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSON": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "JSONC": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "JSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    }
  },
  "language_servers": [
    "biome"
  ],
  "lsp": {
    "biome": {
      "initialization_options": {
        "require_config_file": true
      }
    },
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "preferences": {
            "includePackageJsonAutoImports": "on"
          }
        }
      }
    }
  }
}