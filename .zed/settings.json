{
  "format_on_save": "on",
  "formatter": "language_server",
  "code_actions_on_format": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "languages": {
    "TypeScript": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "JavaScript": {
      "formatter": "language_server",
      "format_on_save": "on"
    },

    "JSON": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "JSONC": {
      "formatter": "language_server",
      "format_on_save": "on"
    }
  },
  "language_servers": ["biome"],
  "lsp": {
    "biome": {
      "initialization_options": {
        "require_config_file": true
      }
    }
  }
}
